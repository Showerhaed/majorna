service cloud.firestore {
  match /databases/{database}/documents {
    // users can read their own document
    match /users/{userId} {
      allow get: if request.auth.uid == userId;
    }

    // metadata is public
    match /mj/meta {
      allow read;
    }

    // transactions are public
    match /txs/{tx} {
      allow read;
    }
  }
}